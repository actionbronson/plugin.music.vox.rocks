		<import addon="xbmc.json" version="11.2.0"/>
		<import addon="xbmc.python" version="3.0.0"/>
    <import addon="xbmc.gui" version="5.15.0"/>
    <import addon="xbmc.metadata" version="2.1.0"/>
    <import addon="script.module.requests" version="2.27.1"/>
    <import addon="script.module.yaml" version="5.3.0"/>
    <import addon="script.module.dateutil" version="2.8.2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.service" library="service.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>VOX Rocks (https://vox.rocks) is a music cloud for various audio file formats and metadata.  This is a Kodi based player.</summary>
    <description>VOX Rocks (https://vox.rocks) is a music cloud for various audio file formats and metadata.  This is a Kodi based player.</description>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.png</fanart>
    </assets>
  </extension>
</addon>
